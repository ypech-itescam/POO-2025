import java.util.Scanner;
public class Main {
    public static void main(String[] args) {
        double A, B;
        double a = 3.5, b = 7.5;
        Scanner scanner = new Scanner(System.in);
        A = scanner.nextDouble(); 
        B = scanner.nextDouble();
        double MEDIA = ((A * a) + (B * b))/(a + b); 
        System.out.printf("MEDIA = %.5f\n", MEDIA);
    }    
}